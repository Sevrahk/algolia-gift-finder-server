{
    "extends": "eslint:recommended",
    "env" : {
        "node" : true,
        "es6" : true
    },
    "rules": {
        "arrow-spacing": 1,
        "arrow-parens": ["warn", "as-needed"],
        "block-scoped-var": 2,
        "block-spacing": 1,
        "camelcase": 1,
        "comma-spacing": 1,
        "comma-style": 1,
        "default-case": 2,
        "eol-last": 2,
        "eqeqeq": 1,
        "getter-return": 2,
        "global-require": 0,
        "id-blacklist": 2,
        "indent": ["error", 4, { "SwitchCase": 1 }],
        "no-alert": 2,
        "no-await-in-loop": 2,
        "no-cond-assign": 1,
        "no-console": 0,
        "no-empty-function": 2,
        "no-lonely-if": 2,
        "no-multi-spaces": 1,
        "no-param-reassign": 1,
        "no-tabs": 1,
        "no-trailing-spaces": 1,
        "no-unmodified-loop-condition": 1,
        "no-unreachable": 1,
        "no-unused-vars": 1,
        "no-warning-comments": 1,
        "no-whitespace-before-property": 1,
        "quotes": ["warn", "single"],
        "semi": 1,
        "yoda": 1
    }
}
